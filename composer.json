{
    "name": "keboola/php-csv-db-import",
    "description": "Handling of large bulk data into database tables.",
    "license": "MIT",
    "require": {
        "PHP": "^7.4|^8",
        "keboola/csv": "^1.1",
        "tracy/tracy": "^2.3",
        "aws/aws-sdk-php": "^3.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "keboola/coding-standard": "^14.0",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\Db\\Import\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbImportTest\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "tests-load-s3": "php ./tests/loadS3.php",
        "tests-redshift": "export REDSHIFT_LEGACY_IMPORT=0 && phpunit tests/Redshift",
        "tests-redshift-legacy": "export REDSHIFT_LEGACY_IMPORT=1 && phpunit tests/Redshift",
        "tests-snowflake": "phpunit tests/Snowflake",
        "build": [
            "@composer validate --strict",
            "@composer install",
            "@phpcs",
            "@phpstan"
        ],
        "e2e": [
            "@tests-load-s3",
            "@tests-redshift",
            "@tests-redshift-legacy",
            "@tests-snowflake"
        ],
        "ci": [
            "@build",
            "@e2e"
        ]
    },
    "config": {
        "lock": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
